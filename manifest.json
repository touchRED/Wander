{
  // Required
  "name": "Wander",
  "version": "1.0",
  "manifest_version": 1,

  // Recommended
  "description": "A multiplayer platformer centered around simplicity",
  "icons": { ... },
  "default_locale": "en",

  // Pick one (or none)
  "browser_action": {...},
  "page_action": {...},
  "theme": {...},
  "app": {...},

  // Add any of these that you need
  "background": {"persistent": false, ...},
  "background": {"persistent": true, ...},
  "chrome_url_overrides": {...},
