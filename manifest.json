  "content_security_policy": "policyString",
  "file_browser_handlers": [...],
  "homepage_url": "http://furblesmith.koding.com/index.html",
  "incognito": "spanning" or "split",
  "intents": {...}
  "key": "publicKey",
  "minimum_chrome_version": "versionString",

